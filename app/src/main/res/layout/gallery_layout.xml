<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10sp">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_imageview"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:src="@drawable/camera_selector_pressed" />

        <ImageView
            android:id="@+id/gallery_imageview"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:src="@drawable/galleryicon_selector_pressed" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toplayout"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txt_categorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"
            />

        <TextView
            android:id="@+id/txt_subcategorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_jobtitel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_photo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_photo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_photo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>
        <TextView
            android:id="@+id/txt_pictureNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"/>

        <TextView
            android:id="@+id/txt_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"
            />
        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:background="@color/colorText"
            />
    </LinearLayout>
</RelativeLayout>

