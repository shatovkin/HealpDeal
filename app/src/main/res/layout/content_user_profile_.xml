<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimitri.helpdeal.azureClasses.menuActivities.UserProfile_Activity">

    <TextView
        android:id="@+id/text_firstname_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Firstname:"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/text_firstname_profile"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="test"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/text_firstname_title"
        android:layout_alignBottom="@+id/text_firstname_title"
        android:layout_toEndOf="@+id/text_firstname_title" />
</RelativeLayout>
