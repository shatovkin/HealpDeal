<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170sp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="293dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/gesamtLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:text="D.Shatovkin"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ranking_image"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_employee_name"
                    android:layout_gravity="left"
                    android:src="@drawable/stern_5" />

                <!--  <TextView
                      android:id="@+id/txt_ranking"
                      android:layout_width="40dp"
                      android:layout_height="20dp"
                      android:text="5.0"
                      android:textColor="@color/black"
                      android:textSize="10dp" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_satisfaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="1.05"
                    android:text="Zufrieden"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bezahlung"
                            android:textAlignment="center"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/txt_salary_per_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/trennwand1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/trennwand" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Erfahrung"
                            android:textAlignment="center"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/txt_job_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 Jahre"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!--<ImageView
                        android:id="@+id/trennwand2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/trennwand" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verifiziert:"
                            android:textAlignment="center"
                            android:textColor="@color/text_gray" />

                        <TextView
                            android:id="@+id/txt_ranking_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>-->

                    <ImageView
                        android:id="@+id/trennwand3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/trennwand" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/verifizierungs_layout"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.99"
                    android:text="Verifizierungen:"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/email_varification"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/email_unchecked" />

                <ImageView
                    android:id="@+id/telefon_varification"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/smartphone_unchecked" />

                <ImageView
                    android:id="@+id/pass_varification"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/pass_unchecked" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"></LinearLayout>

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/image_border"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/photo" />
</RelativeLayout>